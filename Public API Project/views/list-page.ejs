<%- include("partials/header.ejs") %>
<body>
  
    <div class="card" style="width: 18rem;">
        <div class="card-header">
          List of Cocktails
        </div>
        <ul class="list-group list-group-flush">
          <% if(locals.content){
            for(let i=0;i<content.length;i++){%>
            <li class="list-group-item"> <%=content[i].strDrink%> </li>
          <%}
          } else{ %>
            <p>Nothing to show</p>
         <% } %>  
        </ul>
        <form class="my-2" action="/list-cocktails" method="POST">
            <label for="firstLetter">First Letter:</label>
            <input type="text" id="firstLetter" name="firstLetter">
            <hr>
            <label for="drinkDropdown">Select type of drink:</label>
                <select id="drinkDropdown" name="drinkType">
                    <option value="">Choose an option</option>
                    <option value="Alcoholic">Alcoholic</option>
                    <option value="Non_Alcoholic">Non-Alcoholic</option>
                </select>
            <input class="btn btn-primary my-2" type="submit" value="Get List of Cocktails">
        </form>
      </div>
  

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>